<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.andrismulller.makeithappen_withfriends.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_todo_tv"
                android:background="@drawable/main_item_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_request_tv"
                android:background="@drawable/main_item_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_control_tv"
                android:background="@drawable/main_item_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_weather_tv"
                android:background="@drawable/main_item_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="10dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
